<div id="mycart" class="small-10 small-centered medium-8 large-8 column">

<div class="p1 glassy-bg mb1 text-center radius-l1 radius-r1">
   
<h4> You are about to buy following <span class="cart-count"><%=current_user.cart_count%></span> products at total price of <span class="cart-count"><%=current_user.cart_total_price%></span> Euro. </h4>
  
   </div>

   <% @cart_products.each do |product|%>

   <div data-equalizer class="cart-movie large-12 column mb1">
   <div class="column large-2 text-center p0" data-equalizer-watch>
   <%=link_to product do%>
   <%=image_tag product.image, class: "radius-l1"%>

   <%end%>

   </div>

   <div class="column large-7 glassy-bg text-center" data-equalizer-watch>

    <p class="scale ptm"> <%= product.name %> </p>
    </div>

    <div class="column large-3 primary-bg text-center radius-r1" data-equalizer-watch>

    <%=link_to "" , data: {targetUrl: remove_from_cart_path(product)} do%>


    

   <%end%>
    <h4 class="scale">$ <%= product.price %></h4>
    </div>

</div>

<%end%>

<div id="mybutton">

<%=link_to "Pay #{current_user.cart_total_price}â‚¬", new_transaction_path, class: "button" unless current_user.get_cart_products.blank?%>
</div>




</div>

