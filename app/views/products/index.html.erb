<h4 class="column">Featured Products - Best Price Guarantee !!</h4>

<div class="column">

  <ul class="movies-grid no-bullet row">

    <% @products.each do |product| %>

      <li class="large-3 medium-4 small-12 column">

        <div class="movie-card padly">

          <%= link_to product, class: "poster" do %>

            <%= image_tag product.image %>

          <% end %>

          <div class="movie-info ell glassy-bg padmy padlx">

            <div class="title">

              <h6><%= product.name %> <span><%= product.date_added %></span></h6>
            </div>

            <p class="left price label movie-label radius">$ 

<%= product.price %></p>

            <%= link_to product.product_id, class: "right" do %>

              <%= image_tag asset_path("imdb_logo.png") %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
